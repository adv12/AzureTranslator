{
  "name": "azuretranslate",
  "displayName": "AzureTranslate",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:azuretranslate.translate",
	"onCommand:azuretranslate.setSubscriptionKey",
	"onCommand:azuretranslate.enableDisableHtml",
	"onCommand:azuretranslate.selectSourceLanguage",
	"onCommand:azuretranslate.setEndpoint",
	"onCommand:azuretranslate.editSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
		"category": "AzureTranslate",
        "command": "azuretranslate.translate",
        "title": "Translate"
      },
	  {
		"category": "AzureTranslate",
		"command": "azuretranslate.setSubscriptionKey",
		"title": "Set Azure Subscription Key"
	  },
	  {
		"category": "AzureTranslate",
		"command": "azuretranslate.setEndpoint",
		"title": "Set Azure Translator Endpoint"
	  },
	  {
		"category": "AzureTranslate",
		"command": "azuretranslate.enableDisableHtml",
		"title": "Enable/Disable Treat as HTML"
	  },
	  {
		"category": "AzureTranslate",
		"command": "azuretranslate.selectSourceLanguage",
		"title": "Select Source Language"
	  },
	  {
		"category": "AzureTranslate",
        "command": "azuretranslate.editSettings",
        "title": "Edit Settings"
      }
    ],
    "configuration": {
		"title": "AzureTranslate",
		"properties": {
		  "azureTranslate.html": {
			"type": "boolean",
			"default": false,
			"description": "Treat the text to be translated as HTML (i.e. don't translate tag names)."
		  },
		  "azureTranslate.endpoint": {
			"type": "string",
			"default": "https://api.cognitive.microsofttranslator.com",
			"description": "The endpoint for the Azure translator service (varies by region)."
		  },
		  "azureTranslate.sourceLanguage": {
			"type": ["string", "null"],
			"default": null,
			"description": "Source Language",
			"enum":["Detect",
				"Afrikaans: af",
				"Albanian: sq",
				"Amharic: am",
				"Arabic: ar",
				"Armenian: hy",
				"Assamese: as",
